// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
    "name": "C++ General",
    "build": { "dockerfile": "Dockerfile" },
    "customizations": {
        "vscode": {
            "extensions": [
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-vscode.cpptools",
                "twxs.cmake",
                "xaver.clang-format",
                "ms-vscode.hexeditor",
                "cschlosser.doxdocgen"

            ]
        }
    },
    "runArgs": [
        "--cap-add=NET_ADMIN",
        "--cap-add=NET_RAW",
        "--network=host",
        "--privileged",
        "--ulimit", "memlock=-1:-1",
        "--tmpfs", "/sys/fs/bpf:rw,mode=777"
    ],
    "remoteUser": "user",
    "containerUser": "user"
    
    
}
